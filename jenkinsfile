pipeline {
    agent {label "build_server"}
    stages {
        stage("This is sample build from maven using jenkins pipeline") {
            steps {
                sh 'mvn clean'
                sh 'mvn install'
            }
        }
        stage("This code is copied to aws s3 by using awscli commands") {
            steps {
                sh 'aws s3 cp /home/ubuntu/build_server/workspace/build_server/target/webapp.war s3://samplemavenbuilldcode'
            }
        }
    }
}
